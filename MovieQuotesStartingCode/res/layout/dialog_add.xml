<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <EditText
        android:id="@+id/add_dialog_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/movie_title_hint"
	/>		    
    
    <EditText
        android:id="@+id/add_dialog_movie_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/movie_quote_hint"
	/>		    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
 >
        <Button
        android:id="@+id/add_dialog_cancel"
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
            />
            
        <Button
        android:id="@+id/add_dialog_ok"
        android:text="@string/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
            />
        
        
        
    </LinearLayout>   
    
    
    

</LinearLayout>
